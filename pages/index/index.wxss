/**index.wxss**/
.container {
}
.logo {
  width: 100%;
  /* height: 200rpx; */
}
.logo image {
  width: 100%;
}
.desc {
  min-height: 50%;
  border: 1px solid red;
  padding: 50rpx 0;
}
.banner {
  border-bottom: 4px solid rgb(175, 171, 171);
}

.banner .swiper-img {
  width: 100%;
  height: 100%;
}

.content {
  border-bottom: 2px solid rgb(175, 171, 171);
}

.content .txt {
  padding-left: 16rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.content .header {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  border-left: 2px solid limegreen;
}

.content .header .title {
  color: #999;
  font-weight: bold;
  padding-left: 16rpx;
  width: 80%;
}

.content .header .btn {
  color: rgb(129, 194, 32);
  font-size: 30rpx;
}

.content .item-all {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.content .item-all .item {
  position: relative;
  width: 45%;
  height: 250rpx;
  margin: 4rpx;
  border-radius: 5px;
  border: 2px solid rgb(240, 226, 226);
}

.content .item-all .item image {
  width: 100%;
  height: 250rpx;
}


.content .item-all .item .price {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 1px 1px 0; 
  font-size: 12px;
  color: #420707;
  font-weight: bold;
}
