/* pages/aboutUs/aboutUs.wxss */
.logo-bg {
  width: 100%;
}
.logo-bg .logo-image {
  width: 100%;
}
.desc {
  width: 100%;
}
.desc .title {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}
.desc .content {
  width: 100%;
  padding: 20rpx;
}
.desc .content .row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-top: 1px dashed black;
}
.desc .content .row:last-child {
  border-bottom: 1px dashed black;
}
.desc .content .row .label-image {
  width: 100rpx;
  height: 100rpx;
}
.desc .content .row .label-image image {
  width: 100%;
  height: 100%;
}
.desc .content .row .row-desc {
  flex: 1;
  padding-left: 40rpx;
}